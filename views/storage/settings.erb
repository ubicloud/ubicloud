<% edit_perm = has_permission?("DetachableVolume:edit", @detachable_volume.id) %>

<% if edit_perm %>
  <div class="p-6">
    <%== part("components/rename_object", object: @detachable_volume, type: "data disk") %>
  </div>
<% end %>

<div class="p-6">
  <div class="md:flex md:items-center md:justify-between pb-2 lg:pb-4">
    <div class="min-w-0 flex-1">
      <h3 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-2xl sm:tracking-tight">
        Danger Zone
      </h3>
    </div>
  </div>
  <div class="overflow-hidden rounded-lg shadow ring-1 ring-black ring-opacity-5 bg-white divide-y divide-gray-200">
    <% if has_permission?("DetachableVolume:delete", @detachable_volume.id) %>
      <div class="px-4 py-5 sm:p-6">
        <div class="sm:flex sm:items-center sm:justify-between">
          <div>
            <h3 class="text-base font-semibold leading-6 text-gray-900">Delete data disk</h3>
            <div class="mt-2 text-sm text-gray-500">
              <p>This action will permanently delete this data disk.</p>
            </div>
          </div>
          <div id="detachable-volume-delete-<%= @detachable_volume.ubid %>" class="mt-5 sm:ml-6 sm:mt-0 sm:flex sm:flex-shrink-0 sm:items-center">
            <%== part("components/delete_button", confirmation: @detachable_volume.name, url: path(@detachable_volume), redirect: "#{@project.path}/detachable-volume") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
