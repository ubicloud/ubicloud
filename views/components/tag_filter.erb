<%# locals: (action:, name: "tags", value: nil, placeholder: "Filter by tags (e.g., env:prod,team:backend)") %>
<div class="mb-4">
  <form method="get" action="<%= action %>" class="flex items-center gap-2">
    <div class="relative flex-grow max-w-md">
      <input
        type="text"
        name="<%= name %>"
        value="<%= value %>"
        placeholder="<%= placeholder %>"
        class="block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6"
      >
    </div>
    <%== part("components/button", text: "Filter", attributes: { "type" => "submit" }) %>
    <% if value %>
      <a href="<%= action %>" class="text-sm font-semibold leading-6 text-gray-900">Clear</a>
    <% end %>
  </form>
</div>
