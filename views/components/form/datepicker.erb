<% @enable_datepicker = true %>

<% name ||= nil
label ||= nil
default_date ||= nil
min_date ||= nil
max_date ||= nil %>

<%== render(
  "components/form/text",
  locals: {
    label: label,
    name: name,
    extra_class: "datepicker",
    attributes: {
      "required" => true,
      "placeholder" => "YYYY-MM-DD HH:MM",
      "data-maxDate" => max_date,
      "data-minDate" => min_date,
      "data-defaultDate" => default_date,
      "hidden" => true
    }
  }
) %>
