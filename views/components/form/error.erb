<%# locals: (name:, error:) %>
<% if error.is_a?(Array) %>
  <p class="text-sm text-red-600 leading-6" id="<%= name %>-error">
    <% error.each do |e| %>
      <%= e %><br/>
    <% end %>
  </p>
<% else %>
  <p class="text-sm text-red-600 leading-6" id="<%= name %>-error"><%= error %></p>
<% end %>
