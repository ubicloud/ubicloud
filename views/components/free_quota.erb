<% warning_style = !@has_valid_payment_method %>
<% bold_text_color = warning_style ? "free-quota-link-warning" : "free-quota-link-success" %>
<div class="<%= warning_style ? "free-quota-warning" : "free-quota-success" %>">
  <div class="<%= warning_style ? "free-quota-warning-content" : "free-quota-success-content" %>">
    <div class="alert-icon-container">
      <%== part("components/icon", name: "hero-banknotes", classes: "icon-lg") %>
    </div>
    <div class="alert-content">
      <h3 class="free-quota-message">
        <span>You have
          <%= @remaining_free_quota.to_i %>
          free
          <%= @free_quota_unit %>
          available (few-minute delay).</span>
        <span>Free quota refreshes next month.</span>
        <br>
        <% if @has_valid_payment_method %>
          <a href="<%= billing_path %>" class="<%= bold_text_color %>">Billing</a>
          <span>information is valid. Charges start after the free quota.</span>
        <% else %>
          <span>To avoid service interruption, please</span>
          <a href="<%= billing_path %>" class="<%= bold_text_color %>">click here</a>
          <span>to add a valid billing method.</span>
        <% end %>
      </h3>
    </div>
  </div>
</div>
