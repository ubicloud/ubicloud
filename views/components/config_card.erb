<%# locals: (title:, config:, extra_class:, name:, errors:) %>

<div class="bg-white rounded-lg shadow overflow-hidden spaced-bottom-lg <%= extra_class %>">
  <div class="card-header-bordered">
    <h3><%= title %></h3>
  </div>

  <div class="border-b-gray-200 width-full max-height-64 overflow-y-auto">
    <% config.each_with_index do |(key, value), index| %>
      <% error = errors[name + "." + key] %>
      <% next if key.empty? && value.empty? %>
      <div class="config-entry" data-config-id="<%= index %>">
        <div class="flex-between">
          <div class="flex flex-wrap items-center config-entry">
            <input
              type="text"
              class="input-focus-blue spaced-right-sm <%= (error && !error.is_a?(Array)) ? "border-red-500" : "" %>"
              value="<%= key %>"
              name="<%= name %>_keys[]"
              required
            />
            <input
              type="text"
              value="<%= value %>"
              class="input-focus-blue <%= error ? "border-red-500" : "" %>"
              name="<%= name %>_values[]"
            />
            <% if error %>
              <span class="error alert-error-inline" aria-live="polite">
                <% if error.is_a?(Array) %>
                  <% error.each do |error| %>
                    <%= error %><br/>
                  <% end %>
                <% else %>
                  <%= error %>
                <% end %>
              </span>
            <% end %>
          </div>
          <div class="config-actions-cell">
            <%== part("components/button", type: "danger", text: "", icon: "hero-trash", extra_class: "delete-config-btn") if @edit_perm %>
          </div>
        </div>
      </div>
    <% end %>
    <!-- Hidden row for generating new entries -->
    <div class="px-6 py-2 transition-colors group config-placeholder-group text-code hidden" data-config-id="">
      <div class="flex-between">
        <div class="flex flex-wrap items-center config-entry">
          <input
            type="text"
            class="input-focus-blue spaced-right-sm"
            value=""
            name="<%= name %>_keys[]"
            disabled
          />
          <input
            type="text"
            value=""
            class="config-input"
            name="<%= name %>_values[]"
            disabled
          />
          <span class="error alert-error-inline hidden" aria-live="polite"></span>
        </div>
        <div class="config-actions-cell">
          <%== part("components/button", type: "danger", text: "", icon: "hero-trash", extra_class: "delete-config-btn") %>
        </div>
      </div>
    </div>
    <!-- Empty row for new configuration -->
    <% if @edit_perm %>
      <div class="px-6 py-2 transition-colors group new-config text-code">
        <div class="flex-between">
          <div class="flex flex-wrap items-center">
            <input
              type="text"
              class="input-focus-blue spaced-right-sm"
              placeholder="New Key"
              name="<%= name %>_keys[]"
            />
            <input
              type="text"
              placeholder="New Value"
              class="config-input"
              name="<%= name %>_values[]"
            />
            <span class="error alert-error-inline hidden" aria-live="polite"></span>
          </div>
          <div class="config-actions-cell">
            <%== part("components/button", text: "", type: "safe", icon: "hero-plus", extra_class: "add-config-btn") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
