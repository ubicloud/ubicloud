<div style="margin-top: -1.5rem; margin-bottom: var(--spacing-2); display: flex; flex-direction: column; gap: var(--spacing-6);">
  <% [
    ["notice", "hero-check-circle-mini", "alert-success"],
    ["error", "hero-x-circle-mini", "alert-danger"]
  ].each do |type, icon, alert_class| %>
    <% next unless flash[type] %>
    <div class="alert <%= alert_class %>">
      <div class="flex">
        <div class="shrink-0">
          <%== part("components/icon", name: icon, style: "width: 1.25rem; height: 1.25rem;") %>
        </div>
        <div class="ml-3">
          <h3 id="flash-<%= type %>" class="text-sm font-medium"><%= flash[type] %></h3>
        </div>
      </div>
    </div>
  <% end %>
</div>
