<div class="flash-container">
  <% [
    ["notice", "hero-check-circle-mini", "alert-success"],
    ["error", "hero-x-circle-mini", "alert-danger"]
  ].each do |type, icon, alert_class| %>
    <% next unless flash[type] %>
    <div class="alert <%= alert_class %>">
      <div class="flex">
        <div class="alert-icon-container">
          <%== part("components/icon", name: icon, classes: "icon-sm") %>
        </div>
        <div class="alert-content">
          <h3 id="flash-<%= type %>" class="alert-header"><%= flash[type] %></h3>
        </div>
      </div>
    </div>
  <% end %>
</div>
