<% @page_title = "Add VM Host" %>

<div class="px-2 sm:px-3 lg:px-4">
  <div>
    <%== render("components/breadcrumb", locals: { back: "/vm-host", parts: [["VM Hosts", "/vm-host"], %w[Add #]] }) %>
    <%== render("components/page_header", locals: { title: "Add VM Host" }) %>
  </div>
  <!-- Create Card -->
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg bg-white">
          <form action="/vm-host" method="POST">
            <!-- YYY: need a better way to manage coupling of routes and erbs -->
            <%== csrf_tag("/vm-host") %>
            <div class="space-y-12 px-4 py-6 sm:p-8">
              <div class="border-b border-gray-900/10 pb-12">
                <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                  <div class="col-span-full">
                    <%== render(
                      "components/form/text",
                      locals: {
                        name: "hostname",
                        label: "Hostname or IP Address",
                        attributes: {
                          required: true,
                          placeholder: "i.e: 10.10.10.10, example.com"
                        }
                      }
                    ) %>
                  </div>
                  <div class="col-span-full">
                    <%== render(
                      "components/form/radio_small_cards",
                      locals: {
                        name: "location",
                        label: "Provider & Location",
                        options: Option::Locations.to_h { |l| [l.name, l.display_name] },
                        attributes: {
                          required: true
                        }
                      }
                    ) %>
                  </div>
                  <div class="col-span-full">
                    <%== render(
                      "components/form/checkbox",
                      locals: {
                        name: "ndp-needed",
                        label: "NDP Proxying",
                        value: "1",
                        description:
                          "NDP proxy is needed for some hosting providers. Check with your provider to see if they need ndp proxy for IPv6 subnets."
                      }
                    ) %>
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-8 flex items-center justify-end gap-x-6 px-8">
              <a href="/vm-host" class="text-sm font-semibold leading-6 text-gray-900">Cancel</a>
              <%== render("components/form/submit_button", locals: { text: "Add" }) %>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
