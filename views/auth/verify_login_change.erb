<% @page_title = "Verify New Email" %>

<% if rodauth.authenticated? %>
  <%== part("components/page_header", title: "My Account") %>

  <main>
    <div class="account-container">
      <div class="card">
        <div class="account-layout-grid">
          <%== render("account/submenu") %>
          <div class="account-content border-t-gray-200 pb-10">
            <div class="form-section-padded account-section">
              <h2 class="text-lg font-medium text-gray-900">Verify New Email</h2>
              <% form(method: :post) do %>
                <div class="form-grid-6">
                  <div class="col-span-6">
                    <%== part("components/form/submit_button", text: "Click to Verify New Email") %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
<% else %>
  <% @page_message = "Verify your new email" %>

  <% form(method: :post, class: "rodauth form-group") do %>
    <div class="flex flex-col text-center">
      <%== part("components/form/submit_button", text: "Click to Verify New Email") %>
      <a href="/login" class="mt-2 text-sm font-semibold text-gray-900">Sign in to another account</a>
    </div>
  <% end %>
<% end %>
